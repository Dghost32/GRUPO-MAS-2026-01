{
  "name": "url-shortener",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "sst dev",
    "deploy": "sst deploy",
    "remove": "sst remove",
    "lint": "eslint packages/",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write 'packages/**/*.ts' '*.ts'",
    "format:check": "prettier --check 'packages/**/*.ts' '*.ts'"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "eslint": "^10.0.2",
    "prettier": "^3.8.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.56.1"
  }
}
